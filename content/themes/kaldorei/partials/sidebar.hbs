<div id="sidebar" class="sidebar col-md-4 col-lg-4">
    {{! 首页，标签：显示站点信息 }}
        {{#is "index, tag"}}
            {{> "profile"}}
        {{/is}}

    {{! 作者：显示作者信息 }}
    {{#is "author"}}
        {{> "author_info"}}
    {{/is}}

    {{!tag_cloud limit="all"}}




    {{! 轮播图 }}
        <div class="widget " style="padding:10px;">



               <style>
                   .slide1{
                       background-color: rgba(1,126,102,.08);
                       text-align: center;
                       font-size: 20px;
                       color:#017e66;
                       line-height:150px !important;
                   }

                   .swiper-container{

                        height:150px;
                   }
                   a:hover{
                        cursor:pointer;
                   }
               </style>


               <link href="//cdn.bootcss.com/Swiper/3.4.1/css/swiper.min.css" rel="stylesheet">
               <script src="//cdn.bootcss.com/Swiper/3.4.1/js/swiper.min.js"></script>
               <div class="swiper-container">
                   <div class="swiper-wrapper">
                       <a class="swiper-slide slide1" href="/tag/edison/">Intel IoT 系列教程</a>
                       <a class="swiper-slide slide1" href="http://h5edu.cn">想学点基础吗？</a>
                       <a class="swiper-slide slide1" href="#">想不想搭建一个自己的博客？</a>
                   </div>
                   <!-- 如果需要分页器 -->
                   <div class="swiper-pagination"></div>




               </div>
               <script>
                   var mySwiper = new Swiper ('.swiper-container', {
                       direction: 'horizontal',
                       loop: true,
                       autoplay:5000,
                       speed:2000,

                       // 如果需要分页器
                       pagination: '.swiper-pagination',


                   })
               </script>


        </div>





     {{! 常用文章 }}
         <style>
         .full-width{width:100%;background-color:white !important;}
         .full-width:hover{color:#61dec6 !important;}
         </style>
         <div class="widget widget-tag-cloud">
         	<div class="widget-title">
         		<div class="widget-title-meta">
         			<i class="fa fa-file-text"></i>&nbsp;
         			<span class="title-meta-word">常用文章</span>
         		</div>
         	</div>
         	<div class="tag-cloud-content">
                 <a class="full-width" href="#">团队代码规范（持续更新）</a>
         	</div>
         </div>




    {{! 全局：标签云 }}
    {{> "tag_cloud"}}









    {{! 文章：显示文章目录 }}
    {{#is "post"}}
        {{> "toc"}}
    {{/is}}
</div>
